@model IEnumerable<Pruebas.Web.Models.ConfiguracionModel>
@{
    ViewBag.Title = "Listado de Configuraciones";
}
<h2>Configuraciones</h2>
<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ConfiguracionId }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.ConfiguracionId }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.ConfiguracionId })
            </td>
        </tr>
    }
</table>
